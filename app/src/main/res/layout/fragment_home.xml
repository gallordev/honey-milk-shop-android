<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/btn_new_campaign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_new_campaign" />

    <Button
        android:id="@+id/btn_new_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_new_design" />

    <com.honeymilk.shop.ui.custom.PresentationsGroup
        android:id="@+id/presentations_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:checkboxItems="@array/array_presentations"/>

</LinearLayout>
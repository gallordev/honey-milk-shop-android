<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding"
    tools:context=".ui.campaign.CampaignDetailFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_campaign_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CDCBCB"
        android:contentDescription="@string/desc_campaign_image"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedCornersImageView" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/overlay_image"
        app:layout_constraintBottom_toBottomOf="@id/imageView_campaign_image"
        app:layout_constraintEnd_toEndOf="@id/imageView_campaign_image"
        app:layout_constraintStart_toStartOf="@id/imageView_campaign_image"
        app:layout_constraintTop_toTopOf="@id/imageView_campaign_image" />

    <TextView
        android:id="@+id/campaign_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16dp"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:layout_constraintBottom_toTopOf="@+id/campaign_description"
        app:layout_constraintEnd_toEndOf="@id/imageView_campaign_image"
        app:layout_constraintStart_toStartOf="@id/imageView_campaign_image" />

    <TextView
        android:id="@+id/campaign_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:textAppearance="?attr/textAppearanceBody1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imageView_campaign_image"
        app:layout_constraintEnd_toEndOf="@id/imageView_campaign_image"
        app:layout_constraintStart_toStartOf="@id/imageView_campaign_image" />

    <Button
        android:id="@+id/btn_new_order"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/btn_new_order"
        app:layout_constraintTop_toBottomOf="@id/imageView_campaign_image" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/btn_new_order"
        tools:listitem="@layout/layout_item_order" />

</androidx.constraintlayout.widget.ConstraintLayout>
